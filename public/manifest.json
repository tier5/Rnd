{
    "name":"Demo extension",
    "version": "1.0.0",
    "description": "This is my demo extension" ,
    "manifest_version": 2,
    "permissions": [ "tabs",
        "storage", 
        "notifications"
    ],
    
    "background": {
        "scripts":["js/background.js"],
        "persistent": false
    },
    
    "browser_action": 
    {
        "default_popup":"./popup.html"
    },
    
    "icons": {
           "128": "images/icon.png"
    },
    
    "content_scripts": [
        {
            "matches": ["*://*.google.com/*",
             "*://google.com/*"
         ],
            "js": [
            "js/content.js"
         ],
         "run_at": "document_start"
        }
     ]
    
    }