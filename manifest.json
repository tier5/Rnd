{
    "name": "Demo Extension",
    "version": "1.0.1",
    "description": "This i a demo extension",
    "manifest_version": 2,
    "permissions": ["tabs", "storage", "https://www.google.com/"],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "login.html"
    },

    "icons": {
        "48": "48R.png",
        "128": "128R.png"
    },

    "content_scripts": [
        {
            "matches": ["https://www.google.com/*"],
            "js": ["jquery.min.js", "index.js"]
        }
    ]
}
